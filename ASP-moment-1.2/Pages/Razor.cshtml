}

<div >
   
    <h1 >Razor</h1>
    <h2>Current time</h2>
    <p>@date</p>
    
    @if ( @weekday == "Monday")
{
    <p> Today it is Monday </p>
}
else
{
    <p>Today it is not Monday</p>
}
</div>
